option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "backend.settings"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: backend.wsgi
    NumProcesses: 3
    NumThreads: 20
    
 
container_commands:
  01_migrate:
    command: "source /var/app/venv/*/bin/activate && cd backend && python manage.py migrate"
    leader_only: true
  02_createsu:
    command: "source /var/app/venv/*/bin/activate && cd backend && python manage.py createsu"
    leader_only: true
  03_collectstatic:
    command: "source /var/app/venv/*/bin/activate && cd backend && python manage.py collectstatic --noinput --clear" 